#!/bin/bash

# workaround to get my ip
grep -w $(hostname) /etc/hosts | awk '{print $1}' > "/uwsgi.d/uwsgi.host"

# Start the uWSGI server (want to change the /uwsgi.d/uwsgi_server.py file to fit your needs)
#uwsgi --http :9090 --wsgi-file /uwsgi.d/uwsgi_server.py --master --processes 4 --threads 2 --stats 0.0.0.0:9191 --uid uwsgi --gid uwsgi --daemonize2 /uwsgi.d/uwsgi.log
uwsgi /uwsgi.d/uwsgi.ini --daemonize2 /uwsgi.d/uwsgi.log

# then start sshd
/usr/sbin/sshd -D

